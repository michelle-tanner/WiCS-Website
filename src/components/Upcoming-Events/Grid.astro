---
import "../../styles/global.css";
import images from './photos.json';
const limitedImages = images.slice(0, 9);
---

<style>

    #grid-section {
        display: flex;
        justify-content: center;
        margin: 50px;
        margin-bottom: 100px;
        flex-direction: column;
        align-items: center;
    }

  .grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 15px;
    max-width: 700px;
  }
  .grid img {
    width: 200px;
    height: 200px;
    object-fit: cover;
    border-radius: 5px;
    border: 2px solid #fff7ed;
    box-shadow: 0 2px 2px rgba(0, 0, 0, .4);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .grid img:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
  }

</style>

<div id="grid-section" >
    <h2 class="font-lora text-3xl">Past Events</h2>
    <div class="grid image-wrapper">
        {limitedImages.map((src) => (
          <img src={src} alt="Photo" class="grid-photo"/>
        ))}
      </div>
</div>

