<button class="hamburger-icon" id="hamburger-btn">&#9776;</button>


<style>

.hamburger-icon {
        display: block;
        font-size: 47px;
        background: #F9BFC0;
        box-shadow: 0px 4px 4px #00000040;
        border-radius: 10px;
        border-color: #F9BFC0;
        color: white;
        position: absolute;
        top: 50px;
        left: 75%;
        transform: translateX(20%);
        z-index: 1000;
        width: 60px;
        height: 60px;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: transform 0.3s ease;
    }

.hamburger-menu{
    display: none;
    flex-direction: column;
    background-color: #F9BFC0;
    padding: 20px;
    border-radius: 10px;
    position: absolute;
    top: 110px;
    right: -200px;
    width: 200px;
    opacity: 0;
    transition: opacity 0.3s ease, transform 0.3s ease;
}

.hamburger-menu a {
    color: white;
    padding: 10px 0;
    font-family: 'Raleway', sans-serif;
    font-weight: 600;
}

.dropdown-menu{
    display: none;
    flex-direction: column;
    padding-left: 20px;
    background-color: #F9BFC0;
    border-radius: 10px;
    margin-top: 10px
    opacity: 10px;
    transition: opacity 0.3s ease;
}

.dropdown-menu a {
    padding: 8px 0;
    color: white;
}

.dropdown:hover + .dropdown-menu,
.dropdown-menu:hover {
    display: flex;
}

.dropdown-menu a: hover{
    color: #e57f81;
}

.hamburger-menu a:hover, .hamburger-menu .dropdown:hover{
    color: #e57f81;
}

    @media (min-width: 1000px){
        .hamburger-icon,
        .hamburger-menu {
            display: none !important;
        }
    }

</style>



<script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
        const btn = document.getElementById("hamburger-btn");
        const menu = document.getElementById("mobile-menu");

        // Immediately make the hamburger icon visible
        btn.style.display = 'block';

        btn.addEventListener("click", () => {
            const currentDisplay = window.getComputedStyle(menu).display;

            // Toggle between showing and hiding the menu with sliding effect
            if (currentDisplay === "none") {
                menu.style.display = "flex"; // Make menu visible
                menu.style.transform = "translateX(-220px)"; // Slide in from the left
                menu.style.opacity = "1"; // Fade in
                btn.style.transform = "rotate(90deg)"; // Rotate hamburger icon on click
            } else {
                menu.style.transform = "translateX(250px)"; // Slide out to the right
                menu.style.opacity = "0"; // Fade out
                setTimeout(() => { 
                    menu.style.display = "none"; // Hide menu after animation
                }, 300); // Delay matching the transition time
                btn.style.transform = "rotate(0deg)"; // Reset hamburger icon to initial state
            }
        });
    });
</script>
