---
import "../styles/global.css";
const {title, subheadline} = Astro.props;
import button from '../assets/extra/button.svg';
import cloud2 from '../assets/extra/whitecloud-2.svg';
import cloud3 from '../assets/extra/whitecloud-3.svg';
---

<section class="background-container flex relative justify-center items-center w-full min-h-screen max-h-full pointer-events-none z-0">
    <img class="h-auto w-[900px] absolute bottom-10 left-0 max-w-lg object-fill z-0" src={cloud2.src} alt="cloud2"/>

    <div class="text-pink-600 text-center max-w-[600px] flex flex-col items-center justify-center z-1 pointer-events-none">
        <h1 class="font-bold text-5xl font-lora m-8">{title}</h1>
        <p class="text-3xl font-lora m-8">{subheadline}</p>
        <img src={button.src} alt="chevron" />
    </div>

    <img class="w-auto absolute bottom-10 right-0 h-auto max-w-3xl max-h-full z-0 pointer-events-none" src={cloud3.src}  alt="cloud3"/>

</section>

<style>
    .background-container {
        background-image: linear-gradient(180deg, var(--color-pink-100), var(--color-cream-300));
}
</style>

