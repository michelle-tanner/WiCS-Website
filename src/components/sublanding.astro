---
import "../styles/global.css";
const {title, details} = Astro.props;
---

<section class="background-container flex justify-center items-center w-full h-[900px] max-h-full">
    <img class="h-auto max-w-sm" src="src/assets/extra/whitecloud.svg" alt="cloud"/>

    <div class="text-pink-600 text-center h-[400px]">
        <h1 class="font-bold text-5xl font-lora m-8">{title}</h1>
        <p class="text-3xl font-lora m-8">{details}</p>
        <button class="m-8">V</button>
    </div>

    <img class="w-auto h-auto max-w-sm max-h-full" src="src/assets/extra/whitecloud.svg" alt="cloud"/>

</section>

<style>
.background-container {
    background-image: linear-gradient(180deg, var(--color-pink-100), var(--color-cream-100));
}
</style>

